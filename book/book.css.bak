.playButtons {
	margin:0 0 10 0;
	border-radius: 42px 42px 42px 42px;
	background-color: white;
	border: 3px solid black;
text-indent:0;
	display:inline-block;
	color:#000000;
	font-family:Special Elite;
	font-size:12pt;
	font-weight:bold;
	font-style:normal;
height:35px;
	line-height:40px;
width:130px;
	text-decoration:none;
	text-align:center;
}
.playButtons:hover {
    color: white;
    background-color: black;
    border: 3px solid yellow;
}
.playButtons:active {
	position:relative;
	top:1px;
}

.swal-overlay {
  background-color: rgba(255,255,0, 0.45);
}

.swal-modal{
	border: 3px solid black;
}

.swal-title {
  margin: 0px;
  font-size: 32pt;
  color: black;
  font-family: Special Elite;
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.21);
  margin-bottom: 28px;
}

.swal-text {
  background-color: black;
  padding: 10px;
  font-size: 16pt;
  font-family: Quattrocento;
  border: 1px solid #F0E1A1;
  display: block;
  margin: 22px;
  text-align: left;
  color: white;
}

.swal-button {
  padding: 7px 19px;
  border-radius: 2px;
  background-color: #4962B3;
  font-size: 12px;
  border: 1px solid #3e549a;
  text-shadow: 0px -1px 0px rgba(0, 0, 0, 0.3);
}