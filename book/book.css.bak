.div-help {
	position: fixed;
	top: 60px;
	right: 20px;
	
}

.chapts { 
	margin-left: 8rem;
	margin-right: 8rem;
	
}

.TOC {
	text-align: center;
  list-style-position: inside;
}

.up {
	position: fixed;
	bottom: 60px;
	right: 60px;
	height: 50px;
	width: 50px;
